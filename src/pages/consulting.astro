---
import Layout from '../layouts/Layout.astro';
import CTA from '../components/sections/CTA.astro';
import { t, getLocale } from '../i18n/utils';

const locale = getLocale(Astro);
---

<Layout title="Consulting â€” Olle Dyberg" description="AI strategy and implementation consulting. Claude Code, agents, context engineering. Let's talk before we build.">
  <main>
    <!-- Hero -->
    <section class="pt-32 pb-16 md:pt-40 md:pb-20">
      <div class="max-w-4xl mx-auto px-6 md:px-8">
        <div class="animate-reveal mb-10 flex items-center gap-3.5">
          <img
            src="/olle.webp"
            alt="Olle Dyberg"
            width="40"
            height="40"
            class="w-10 h-10 rounded-full object-cover border border-(--color-border)"
          />
          <p class="font-mono text-(--color-accent) text-base tracking-wide">
            {t('consulting.label', locale)}
          </p>
        </div>

        <h1 class="animate-reveal delay-1 font-display text-[2.5rem] md:text-[4rem] leading-[1.05] font-normal tracking-tight mb-10">
          {t('consulting.headline', locale)}
        </h1>

        <p class="animate-reveal delay-2 text-(--color-text-secondary) text-lg leading-relaxed max-w-xl">
          {t('consulting.subheadline', locale)}
        </p>
      </div>
    </section>

    <!-- Services -->
    <section class="py-16 md:py-20">
      <div class="max-w-4xl mx-auto px-6 md:px-8">
        <hr class="rule mb-16" />

        <div class="space-y-20">
          <!-- Strategy Session -->
          <div class="grid md:grid-cols-[1fr_1.6fr] gap-8 md:gap-16">
            <div>
              <p class="font-mono text-sm text-(--color-muted) tracking-wide uppercase mb-2">{t('consulting.strategy.duration', locale)}</p>
              <h3 class="font-display text-2xl tracking-tight">{t('consulting.strategy.title', locale)}</h3>
              <p class="font-display text-xl text-(--color-accent) mt-2">{t('consulting.strategy.price', locale)}</p>
            </div>
            <div class="text-(--color-text-secondary) leading-relaxed">
              <p>{t('consulting.strategy.description', locale)}</p>
            </div>
          </div>

          <!-- Team Workshop -->
          <div class="grid md:grid-cols-[1fr_1.6fr] gap-8 md:gap-16">
            <div>
              <p class="font-mono text-sm text-(--color-muted) tracking-wide uppercase mb-2">{t('consulting.workshop.duration', locale)}</p>
              <h3 class="font-display text-2xl tracking-tight">{t('consulting.workshop.title', locale)}</h3>
              <p class="font-display text-xl text-(--color-accent) mt-2">{t('consulting.workshop.price', locale)}</p>
            </div>
            <div class="text-(--color-text-secondary) leading-relaxed">
              <p>{t('consulting.workshop.description', locale)}</p>
            </div>
          </div>

          <!-- Advisory -->
          <div class="grid md:grid-cols-[1fr_1.6fr] gap-8 md:gap-16">
            <div>
              <p class="font-mono text-sm text-(--color-muted) tracking-wide uppercase mb-2">{t('consulting.advisory.duration', locale)}</p>
              <h3 class="font-display text-2xl tracking-tight">{t('consulting.advisory.title', locale)}</h3>
              <p class="font-display text-xl text-(--color-accent) mt-2">{t('consulting.advisory.price', locale)}</p>
            </div>
            <div class="text-(--color-text-secondary) leading-relaxed">
              <p>{t('consulting.advisory.description', locale)}</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Process -->
    <section class="py-16 md:py-20">
      <div class="max-w-4xl mx-auto px-6 md:px-8">
        <hr class="rule mb-16" />

        <div class="grid md:grid-cols-3 gap-12 md:gap-16">
          <div>
            <p class="font-mono text-(--color-accent) text-base mb-3">01</p>
            <h3 class="font-display text-xl tracking-tight mb-2">{t('consulting.process1.title', locale)}</h3>
            <p class="text-base text-(--color-muted) leading-relaxed">
              {t('consulting.process1.description', locale)}
            </p>
          </div>
          <div>
            <p class="font-mono text-(--color-accent) text-base mb-3">02</p>
            <h3 class="font-display text-xl tracking-tight mb-2">{t('consulting.process2.title', locale)}</h3>
            <p class="text-base text-(--color-muted) leading-relaxed">
              {t('consulting.process2.description', locale)}
            </p>
          </div>
          <div>
            <p class="font-mono text-(--color-accent) text-base mb-3">03</p>
            <h3 class="font-display text-xl tracking-tight mb-2">{t('consulting.process3.title', locale)}</h3>
            <p class="text-base text-(--color-muted) leading-relaxed">
              {t('consulting.process3.description', locale)}
            </p>
          </div>
        </div>
      </div>
    </section>

    <CTA locale={locale} />
  </main>
</Layout>

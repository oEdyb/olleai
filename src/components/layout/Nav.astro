---
const currentPath = Astro.url.pathname;
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-(--color-bg)/90 backdrop-blur-md">
  <div class="max-w-4xl mx-auto px-6 md:px-8">
    <div class="flex items-center justify-between h-16 border-b border-(--color-border)/40">
      <a href="/" class="group">
        <span class="text-xl tracking-tight text-(--color-text) group-hover:text-(--color-accent) transition-colors" style="font-family: var(--font-display);">
          Olle Dyberg
        </span>
      </a>

      <div class="flex items-center gap-6">
        <a
          href="/consulting"
          class:list={[
            "text-xs uppercase tracking-[0.15em] transition-colors",
            currentPath.startsWith("/consulting")
              ? "text-(--color-text)"
              : "text-(--color-muted) hover:text-(--color-text-secondary)",
          ]}
          style="font-family: var(--font-mono);"
        >
          Consulting
        </a>
        <a
          href="/links"
          class:list={[
            "text-xs uppercase tracking-[0.15em] transition-colors",
            currentPath.startsWith("/links")
              ? "text-(--color-text)"
              : "text-(--color-muted) hover:text-(--color-text-secondary)",
          ]}
          style="font-family: var(--font-mono);"
        >
          Links
        </a>
      </div>
    </div>
  </div>
</nav>

---
import { t } from '../../i18n/utils';

interface Props {
  locale?: string;
}

const { locale = "en" } = Astro.props;
---

<section class="pt-36 pb-20 md:pt-48 md:pb-28">
  <div class="max-w-4xl mx-auto px-6 md:px-8">
    <div class="animate-reveal mb-6 md:mb-8">
      <img
        src="/olle.jpg"
        alt="Olle Dyberg"
        width="80"
        height="80"
        fetchpriority="high"
        class="w-20 h-20 rounded-full object-cover border border-(--color-border)"
      />
    </div>

    <h1 class="animate-reveal delay-1 font-display text-[3rem] md:text-[5rem] lg:text-[6rem] leading-[1] font-normal tracking-tight mb-5">
      {t("hero.headline", locale)}
    </h1>

    <p class="animate-reveal delay-1 font-mono text-(--color-accent) text-sm md:text-base tracking-widest uppercase mb-12 md:mb-14">
      {t("hero.label", locale)}
    </p>

    <div class="animate-reveal delay-2 max-w-xl">
      <p class="text-(--color-text-secondary) text-lg md:text-xl leading-relaxed mb-12">
        {t("hero.subheadline", locale)}
      </p>

      <a
        href={locale === "en" ? "/consulting" : `/${locale}/consulting`}
        class="inline-flex items-center gap-3 text-base font-medium text-(--color-accent) border-b border-(--color-accent)/40 pb-0.5 hover:border-(--color-accent) transition-colors group"
      >
        <span>{t("hero.cta", locale)}</span>
        <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>

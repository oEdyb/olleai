---
import { t } from '../../i18n/utils';

interface Props {
  locale?: string;
}

const { locale = "en" } = Astro.props;

const channels = [
  {
    platform: "YouTube",
    handle: "@olleai",
    stat: t("socialproof.yt.stat", locale),
    href: "https://youtube.com/@olleai",
    icon: `<svg viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814Z"/><path d="m9.545 15.568 6.272-3.568-6.272-3.568v7.136Z" fill="var(--color-bg)"/></svg>`,
  },
  {
    platform: "TikTok",
    handle: "@olleai",
    stat: t("socialproof.tt.stat", locale),
    href: "https://tiktok.com/@olleai",
    icon: `<svg viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5"><path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-2.88 2.5 2.89 2.89 0 0 1-2.88-2.89 2.89 2.89 0 0 1 2.88-2.89c.28 0 .54.04.79.1V9.01a6.27 6.27 0 0 0-.79-.05 6.34 6.34 0 0 0-6.33 6.33A6.34 6.34 0 0 0 9.49 21.62a6.34 6.34 0 0 0 6.33-6.33V8.73a8.19 8.19 0 0 0 4.77 1.52V6.8a4.84 4.84 0 0 1-1-.11Z"/></svg>`,
  },
  {
    platform: "X",
    handle: "@olledyberg",
    stat: t("socialproof.x.stat", locale),
    href: "https://x.com/olledyberg",
    icon: `<svg viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>`,
  },
  {
    platform: "GitHub",
    handle: "oEdyb",
    stat: t("socialproof.gh.stat", locale),
    href: "https://github.com/oEdyb",
    icon: `<svg viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5"><path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"/></svg>`,
  },
];
---

<section class="py-12 md:py-16">
  <div class="max-w-4xl mx-auto px-6 md:px-8">
    <hr class="rule mb-12" />

    <p class="text-(--color-text-secondary) text-lg leading-relaxed mb-8">{t("socialproof.label", locale)}</p>

    <div class="grid sm:grid-cols-2 md:grid-cols-4 gap-4">
      {channels.map((ch) => (
        <a
          href={ch.href}
          target="_blank"
          rel="noopener noreferrer"
          class="group flex items-center gap-4 p-5 min-h-14 rounded-lg border border-(--color-border) hover:border-(--color-border-hover) bg-(--color-surface) hover:bg-(--color-surface-hover) transition-all"
        >
          <div class="text-(--color-accent) flex-shrink-0" set:html={ch.icon} />
          <div class="min-w-0">
            <p class="text-sm font-medium text-(--color-text) group-hover:text-(--color-accent) transition-colors truncate">{ch.handle}</p>
            <p class="font-mono text-xs text-(--color-muted) tracking-wide">{ch.stat}</p>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

---
import { t } from '../../i18n/utils';

interface Props {
  locale?: string;
}

const { locale = "en" } = Astro.props;
---

<section class="py-20 md:py-28" id="about">
  <div class="max-w-4xl mx-auto px-6 md:px-8">
    <hr class="rule mb-16" />

    <p class="font-mono text-(--color-muted) text-xs tracking-widest uppercase mb-4">{t("about.label", locale)}</p>
    <h2 class="font-display text-2xl md:text-3xl leading-snug tracking-tight mb-10">
      {t("about.headline", locale)}
    </h2>

    <div class="grid md:grid-cols-[1fr_1.4fr] gap-12 md:gap-20 items-start">
      <div class="overflow-hidden rounded-lg">
        <img
          src="/olle-alps.webp"
          alt="Olle walking in the Swiss Alps"
          class="w-full object-cover"
          loading="lazy"
        />
      </div>

      <div class="space-y-6 text-(--color-text-secondary) leading-relaxed">
        <p>{t("about.p1", locale)}</p>
        <p class="font-display text-(--color-text) text-xl md:text-2xl leading-snug tracking-tight">
          {t("about.p2", locale)}
        </p>
        <p>{t("about.p3", locale)}</p>
        <p>{t("about.p4", locale)}</p>
      </div>
    </div>
  </div>
</section>
